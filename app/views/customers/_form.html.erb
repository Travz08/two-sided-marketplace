<div class="form-width mx-auto">
  <div class="center-form">
    <%= form_with(model: @customer, local: true) do |form| %>
      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :image %><br />
        <%= form.file_field :image, id: :customer_image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :first_name %><br />
        <%= form.text_field :first_name, id: :customer_first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name %><br />
        <%= form.text_field :last_name, id: :customer_last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :bio %><br />
        <%= form.text_field :bio, id: :customer_bio, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :address %><br />
        <%= form.text_field :address, id: :customer_address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :city %><br />
        <%= form.text_field :city, id: :customer_city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :country %><br />
        <%= form.text_field :country, id: :customer_country, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :postcode %><br />
        <%= form.number_field :postcode, id: :customer_postcode, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Create Finder", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
