<div class="form-width mx-auto">
<div class="center-form">
  <%= form_with(model: owner, local: true) do |form| %>
    <% if owner.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

        <ul>
        <% owner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :image %></br>
      <%= form.file_field :image, id: :owner_image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :first_name %></br>
      <%= form.text_field :first_name, id: :owner_first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %></br>
      <%= form.text_field :last_name, id: :owner_last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :bio %></br>
      <%= form.text_field :bio, id: :owner_bio, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address %></br>
      <%= form.text_field :address, id: :owner_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :city %></br>
      <%= form.text_field :city, id: :owner_city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :country %></br>
      <%= form.text_field :country, id: :owner_country, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :postcode %></br>
      <%= form.number_field :postcode, id: :owner_postcode, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Create Lender", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>
